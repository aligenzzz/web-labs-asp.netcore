@model Web_153505_Bybko.Areas.Admin.Pages.IndexModel

@{
    ViewBag.Title = "Administration";
}

<h4>Books</h4>
<p>
    <a class="nav-link btn-link text-dark" asp-page="Create">
        <i class="fa-solid fa-plus"></i>
        Create New
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Items[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Items[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Items[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Items[0].Price)
            </th>
            <th style="min-width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Book.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="@item.Image" alt="Book's image">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
                $
            </td>
            <td>
                <a class="nav-link btn-link text-dark" asp-page="./Edit" asp-route-id="@item.Id">
                    <i class="fa-solid fa-pencil"></i>
                    Edit
                </a>
                <a class="nav-link btn-link text-dark" asp-page="./Details" asp-route-id="@item.Id">
                    <i class="fa-solid fa-info"></i>
                    Details
                </a>
                <a class="nav-link btn-link text-dark" asp-page="./Delete" asp-route-id="@item.Id">
                    <i class="fa-solid fa-eraser"></i>
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>

</table>

<Pager current-page="@Model.Book.CurrentPage"
       total-pages="@Model.Book.TotalPages"
       admin="true"></Pager>

