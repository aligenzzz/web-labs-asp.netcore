@page
@model Web_153505_Bybko.Areas.Admin.Pages.DetailsModel

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Book's details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Book.Image" alt="Book's image"/>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Genre!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Price)
            $
        </dd>
    </dl>
</div>
<div>
    <a class="nav-link btn-link text-dark" asp-page="./Edit" asp-route-id="@Model.Book?.Id">Edit</a>
    <a class="nav-link btn-link text-dark mb-3" asp-page="./Index">Back to List</a>
</div>
