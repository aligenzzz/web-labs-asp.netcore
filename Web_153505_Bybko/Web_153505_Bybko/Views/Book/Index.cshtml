@model ListModel<Book> 

<h2>Catalogue</h2>

<div class="col-2 border-2">
    <ul class="nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle"
               data-bs-toggle="dropdown"
               href="#"
               role="button"
               aria-expanded="false">
               @ViewData["currentGenre"]
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item"
                       asp-controller="book"
                       asp-action="Index"
                       asp-route-genre=@null>All</a>
                </li>
                @foreach (var genre in ViewBag.genres)
                {
                    <li>
                        <a class="dropdown-item"
                           asp-controller="book"
                           asp-action="Index"
                           asp-route-genre="@genre.Name">
                            @genre.Name
                        </a>
                    </li>
                }
            </ul>
        </li>
    </ul>
</div>

<div class="row">
    @foreach (var book in Model.Items)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="d-flex align-items-center justify-content-center" style="padding: 20px;">
                    <img src="@book.Image" alt="Book's image'" class="card-img-top" 
                         style="height: 230px; width: 150px;">
                </div>      
                <div class="card-body">
                    <h4 class="card-title">@book.Name</h4>
                    <p class="card-text">@book.Author</p>
                    <p class="card-text">
                        @if (book.Genre != null) 
                            @book.Genre.Name
                    </p>
                    <small class="card-text">@book.Description</small>
                    <h5 class="card-text">@book.Price$</h5>
                    <a href="@Url.Action("Add", "Cart", new { id = book.Id, returnUrl = Context.Request.Path })" 
                       class="btn btn-dark">Add to cart</a>
                </div>
            </div>
        </div>
    }
</div>


<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-controller="book"
                                 asp-action="Index"
                                 asp-route-genre="@ViewData["currentGenre"]"
                                 asp-route-pageno="1">
                First
            </a>
        </li>
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-controller="book"
                                 asp-action="Index"
                                 asp-route-genre="@ViewData["currentGenre"]"
                                 asp-route-pageno="@(Model.CurrentPage - 1)">
                Previous
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-controller="book"
                                     asp-action="Index"
                                     asp-route-genre="@ViewData["currentGenre"]"
                                     asp-route-pageno="@i">
                    @i
                </a>
            </li>
        }

        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-controller="book"
                                 asp-action="Index"
                                 asp-route-genre="@ViewData["currentGenre"]"
                                 asp-route-pageno="@(Model.CurrentPage + 1)">
                Next
            </a>
        </li>
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-controller="book"
                                 asp-action="Index"
                                 asp-route-genre="@ViewData["currentGenre"]"
                                 asp-route-pageno="@Model.TotalPages">
                Last
            </a>
        </li>
    </ul>
</nav>




