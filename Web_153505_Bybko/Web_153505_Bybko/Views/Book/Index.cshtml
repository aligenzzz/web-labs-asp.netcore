@model ListModel<Book> 

@{
    ViewBag.Title = "Catalogue";
}


<h2>Catalogue</h2>

<div class="col-2 border-2">
    <ul class="nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle"
               data-bs-toggle="dropdown"
               href="#"
               role="button"
               aria-expanded="false">
               @ViewData["currentGenre"]
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item"
                       asp-controller="book"
                       asp-action="Index"
                       asp-route-genre=@null>All</a>
                </li>
                @foreach (var genre in ViewBag.genres)
                {
                    <li>
                        <a class="dropdown-item"
                           asp-controller="book"
                           asp-action="Index"
                           asp-route-genre="@genre.Name">
                            @genre.Name
                        </a>
                    </li>
                }
            </ul>
        </li>
    </ul>
</div>

<div id="bookList">
    <partial name="_BooksPartial" />
</div>

